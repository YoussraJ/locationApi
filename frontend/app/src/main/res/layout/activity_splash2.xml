<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Splash Logo -->

    <!-- Text Logo -->
    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="328dp"
        android:layout_height="404dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/splash_logo_description"
        android:scaleType="centerInside"
        android:src="@drawable/imgsplash"
        app:layout_constraintBottom_toTopOf="@+id/id_textlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/id_textlogo"
        android:layout_width="314dp"
        android:layout_height="131dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/text_logo_description"
        android:scaleType="fitCenter"
        android:src="@drawable/bestmap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>
